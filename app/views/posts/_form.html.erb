<%= form_for @post do |f| %>

  <div class="form-group">
    <%= f.label "タイトル" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "本文" %>
    <%= f.text_area :description, class: "form-control", rows: "20" %>
  </div>

  <div class="form-group">
    <%= f.label "カテゴリー" %>
    <%= f.select :category_id, Category.all.map { |c| [c.name, c.id] }, {}, { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.label "公開", class: "checkbox-inline" do %>
      <%= f.check_box :published, {}, checked_value = "true", unchecked_value = "false" %>公開
    <% end %>
  </div>

  <%= f.submit "変更を保存", class: "btn btn-default" %>

<% end %>
